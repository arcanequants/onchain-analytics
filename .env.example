# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
DATABASE_URL=your_supabase_postgres_url

# RPC Providers (Alchemy)
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_KEY
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_KEY

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_google_analytics_id

# Ad Networks
COINZILLA_ZONE_ID=your_coinzilla_zone_id
ADSENSE_CLIENT_ID=ca-pub-your_adsense_id

# API Keys (for data sources)
COINGECKO_API_KEY=your_coingecko_key
DEFILAMA_API_KEY=your_defillama_key

# CRON Security (generate a random secure string)
CRON_SECRET=your_secure_cron_secret_here

# Upstash Redis (for rate limiting)
# Sign up at https://upstash.com
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# Sentry (error tracking)
# SRE-006: Required for Sentry to work
SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Admin Authentication
# SRE-002: Comma-separated list of admin email addresses
# IMPORTANT: Set this in Vercel environment variables, NOT in .env files committed to git
ADMIN_EMAILS=

# Supabase Service Role Key (for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
